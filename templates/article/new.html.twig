{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col mb-3">
            {{ form_row(form.title) }}
        </div>
        <div class="col mb-3">
            {{ form_row(form.author) }}
        </div>
    </div>
    <div class="row">
        <div class="col mb-3">
            {{ form_row(form.resume) }}
        </div>
    </div>
    <div class="row">
        <div class="col mb-3">
            {{ form_row(form.contenu) }}
        </div>
    </div>
    <div class="row">
        <div class="col mb-3">
            {{ form_row(form.date) }}
        </div>
    </div>
    {{ form_end(form) }}

    {% if is_granted('ROLE_EDITOR') %}
        <a href="{{ path('new_article') }}">Ecrire un nouvel article</a>
    {% endif %}
{% endblock %}